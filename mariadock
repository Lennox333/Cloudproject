# Use official MariaDB image
FROM mariadb:latest

# Set environment variables (from compose)
ENV MARIA_ROOT_PASSWORD=your_root_password
ENV MARIA_DATABASE=youtdb
ENV MARIA_USER=admin
ENV MARIA_PASSWORD=my_db_password

# Expose default MariaDB port
EXPOSE 3306

COPY init.sql /docker-entrypoint-initdb.d/
